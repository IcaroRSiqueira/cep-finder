<div class="card bg-base-200 w-96 shadow-xl border-stone mt-10">
  <div class="card-body">
    <h2 class="card-title"><%= t(:title, scope: [:most_searched_card]) %></h2>
    <% if @most_searched_ceps.empty? %>
      <p class="mt-3"><%= t(:no_search_performed) %></p>
    <% else %>
      <% @most_searched_ceps.each_with_index do |address_info, index| %>
        <p><%= "#{index + 1} - #{address_info.number}  - #{t(:total, scope: [:most_searched_card])} #{address_info.count}" %></p>
      <% end %>
    <% end %>
  </div>
</div>
