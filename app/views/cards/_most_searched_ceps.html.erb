<div class="card bg-base-200 w-96 shadow-xl border-stone mt-10">
  <div class="card-body">
    <h2 class="card-title">CEPs mais buscados:</h2>
    <% if @most_searched_ceps.empty? %>
      <p class="mt-3"><%= 'Nenhuma busca realizada' %></p>
    <% else %>
      <% @most_searched_ceps.each_with_index do |address_info, index| %>
        <p><%= "#{index + 1} - #{address_info.number}  - total: #{address_info.count}" %></p>
      <% end %>
    <% end %>
  </div>
</div>
