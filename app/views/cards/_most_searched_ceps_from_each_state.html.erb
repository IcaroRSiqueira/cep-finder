<div class="card bg-base-200 w-96 shadow-xl border-stone mt-10">
  <div class="card-body">
    <h2 class="card-title"><%= t(:title, scope: [:most_searched_by_state_card]) %></h2>
    <% if @most_searched_ceps_from_each_state.empty? %>
      <p class="mt-3"><%= t(:no_search_performed) %></p>
    <% else %>
      <% @most_searched_ceps_from_each_state.each do |address_info| %>
        <p><%= "#{address_info.state} - #{address_info.number}" %></p>
      <% end %>
    <% end %>
  </div>
</div>
